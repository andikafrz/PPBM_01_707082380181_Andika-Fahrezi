<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_pa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:clipToOutline="true"
    android:background="#4A60D6">

    <ImageView
        android:id="@+id/form_contract"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:background="@drawable/contract"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/form_contract"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/form_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roundform3"
            android:drawableRight="@drawable/baseline_personadd"
            android:hint="Username"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="#FFFF" />

        <EditText
            android:id="@+id/form_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roundform3"
            android:drawableRight="@drawable/baseline_email"
            android:hint="Email"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="#FFFF" />

        <EditText
            android:id="@+id/form_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roundform3"
            android:drawableRight="@drawable/baseline_visibilityoff"
            android:hint="Password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="#FFFF" />

        <EditText
            android:id="@+id/form_comfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundform3"
            android:drawableRight="@drawable/baseline_visibilityoff"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="#FFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/term_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/form"
        android:paddingStart="40sp">

        <CheckBox
            android:id="@+id/checkbox_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form"
            android:text="Agree With Term &amp; Condition"
            android:textColor="@color/white" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/term_condition"
        android:background="@drawable/roundform2"
        android:text="Create Account"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_account"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?  "
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:text="Login"
            android:textColor="#AFD83C"/>

    </LinearLayout>



</RelativeLayout>